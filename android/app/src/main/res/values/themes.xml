<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#0f172a</item>
        <!-- 状态栏透明 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- 导航栏颜色 -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- 按钮颜色：true 表示深色按钮，false 表示浅色按钮 -->
        <item name="android:windowLightNavigationBar">true</item>
        <!-- 设置状态栏背景颜色 -->
        <!--<item name="android:statusBarColor">#f9fafb</item>-->
        <!-- 控制状态栏文字图标颜色（亮色 or 暗色） -->
        <item name="android:windowLightStatusBar">true</item>
        <!--背景色-->
        <item name="android:windowBackground">@android:color/white</item>
        <!--去掉水波纹-->
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:ambientShadowAlpha">0.0</item>
        <item name="android:spotShadowAlpha">0.0</item>
    </style>
</resources>